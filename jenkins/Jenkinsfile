pipeline {
    agent any

    environment {
        DOCKER_REGISTRY = "sharonba"
        FRONTEND_IMAGE = "${DOCKER_REGISTRY}/url-shortener-frontend"
        BACKEND_IMAGE  = "${DOCKER_REGISTRY}/url-shortener-backend"
        GIT_SHA        = sh(script: 'git rev-parse --short HEAD', returnStdout: true).trim()
        TAG            = "${BUILD_NUMBER}-${GIT_SHA}"
    }

    stages {
        stage('Clone Repository') {
            steps {
                checkout scm
            }
        }

        stage('Build Images') {
            steps {
                script {
                    echo "Building Frontend Image: ${TAG}"
                    sh "docker build -t ${FRONTEND_IMAGE}:${TAG} ./frontend"
                    
                    echo "Building Backend Image: ${TAG}"
                    sh "docker build -t ${BACKEND_IMAGE}:${TAG} ./backend"
                }
            }
        }

        stage('Test Applications') {
            steps {
                script {
                    echo "Running Backend Tests..."
    
                    sh "docker run --rm ${BACKEND_IMAGE}:${TAG} pytest"
                    
                    echo "Running Frontend Tests..."
                    
                    // This makes sure the test runs in an environment similar to the Docker container
                    sh """
                        docker run --rm \
                        -v ${WORKSPACE}/frontend:/app \
                        -v /app/node_modules \
                        -w /app \
                        -e CI=true \
                        node:18-alpine \
                        sh -c "npm install && timeout 5s npm test run"
                    """
                }
            }
        }

        stage('Security Scan (Trivy)') {
            steps {
                script {
                    // Running Trivy from a docker image
                    echo "Scanning Frontend Image..."
                    sh "docker run --rm -v /var/run/docker.sock:/var/run/docker.sock aquasec/trivy:latest image --severity HIGH,CRITICAL ${FRONTEND_IMAGE}:${TAG}"
                    
                    echo "Scanning Backend Image..."
                    sh "docker run --rm -v /var/run/docker.sock:/var/run/docker.sock aquasec/trivy:latest image --severity HIGH,CRITICAL ${BACKEND_IMAGE}:${TAG}"
                }
            }
        }

        stage('Push to Registry') {
            steps {
                script {
                    
                    withCredentials([usernamePassword(credentialsId: '7a839a0d-889a-4cd9-9484-443f95b911c6', 
                                                    passwordVariable: 'PASS', 
                                                    usernameVariable: 'USER')]) {
                        sh "echo $PASS | docker login -u $USER --password-stdin"
                        sh "docker push ${FRONTEND_IMAGE}:${TAG}"
                        sh "docker tag ${FRONTEND_IMAGE}:${TAG} ${FRONTEND_IMAGE}:latest"
                        sh "docker push ${FRONTEND_IMAGE}:latest"
                        sh "docker push ${BACKEND_IMAGE}:${TAG}"
                        sh "docker tag ${BACKEND_IMAGE}:${TAG} ${BACKEND_IMAGE}:latest"
                        sh "docker push ${BACKEND_IMAGE}:latest"
                    }
                }
            }
}

        stage('Deploy to K8s') {
            steps {
                withCredentials([file(credentialsId: 'k8s-kubeconfig', variable: 'KUBECONFIG')]) {
                    script {
                        echo "Deploying to Kubernetes Cluster..."
                        sh "kubectl --kubeconfig=${KUBECONFIG} apply -f ./kubernetes/ -R -n urlshortener"
                    }
                }
            }
        }

        stage('Health Check') {
            steps {
                withCredentials([file(credentialsId: 'k8s-kubeconfig', variable: 'KUBECONFIG')]) {
                    script {
                        echo "Waiting for deployments to stabilize..."
                        sh "kubectl --kubeconfig=${KUBECONFIG} rollout status deployment/frontend-deployment -n urlshortener --timeout=90s"
                        sh "kubectl --kubeconfig=${KUBECONFIG} rollout status deployment/backend-deployment -n urlshortener --timeout=90s"

                        echo "Readiness and liveness"
                        sh "kubectl --kubeconfig=${KUBECONFIG} exec -n urlshortener deploy/frontend-deployment -- curl -f http://backend-service:5000/health/ready || exit 1"
                        sh "kubectl --kubeconfig=${KUBECONFIG} exec -n urlshortener deploy/frontend-deployment -- curl -f http://backend-service:5000/health/live || exit 1"
                    }
                }
            }
        }
    }

    post {
        always {
            sh "docker logout"
            cleanWs()
        }
        failure {
            echo "Pipeline failed! Check logs for security scan or test failures."
        }
    }
}